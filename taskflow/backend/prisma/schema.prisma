datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  password String
  name     String
  projects Project[] // Relación inversa
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String?
  userId      String   // Clave foránea
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}